<form role="form" action="/class/add" method="POST">
    <div class="box-body">
      <div class="form-group">
        <label>Class</label>
        <select name="subjects_id" class="form-control">
          <option value=""></option>
          <% if (subject) {subject.forEach(el => { %>
          <option value="<%= el.subjects_id %>""><%= el.subjects_name %></option>
          <% })} %>
        </select>
      </div>
      <div class="form-group">
        <label>Class Date</label>
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <input type="text" class="form-control" name="class_date" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask/>
        </div><!-- /.input group -->
      </div><!-- /.form group -->
      <div class="bootstrap-timepicker">
        <div class="form-group">
          <label>Class Time</label>
          <div class="input-group">
            <input type="text" name="class_time" class="form-control timepicker"/>
            <div class="input-group-addon">
              <i class="fa fa-clock-o"></i>
            </div>
          </div><!-- /.input group -->
        </div><!-- /.form group -->
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Room</label>
        <input type="text" class="form-control" name="room" id="room" placeholder="Enter Room" value="">
      </div>
      <div class="form-group">
        <label>Instructor / Teachers</label>
        <select name="teachers_id" class="form-control">
          <option value=""></option>
          <% if (instructor) { instructor.forEach(el => { %>
          <option value="<%= el.teachers_id %>"><%= el.teacher_name %></option>
          <% })} %>
        </select>
      </div>
    </div><!-- /.box-body -->

    <div class="box-footer">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>