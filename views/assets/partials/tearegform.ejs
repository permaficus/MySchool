<section class="content">
    <div class="row">
      <!-- left column -->
      <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
          <div class="box-header">
            <h3 class="box-title">* Required Field</h3>
          </div><!-- /.box-header -->
          <!-- form start -->
          <form role="form" action="/teachers/add" method="POST">
            <div class="box-body">
              <div class="form-group">
                <label for="exampleInputEmail1">Teachers Name</label>
                <input type="text" class="form-control" name="teacher_name" id="full_name" placeholder="Enter name" value="">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Email</label>
                <input type="text" class="form-control" name="email" id="email" placeholder="Enter email address" value="">
              </div>
              <div class="form-group">
                <label>Gender</label>
                <select name="gender" class="form-control">
                  <option value="Male">Male</option>
                  <option values="Female">Female</option>
                </select>
              </div>
              <div class="form-group">
                <label>Expertise</label>
                <select name="teacher_expertise" class="form-control">
                  <option value="js">Javascript</option>
                  <option values="go">Golang</option>
                  <option value="python">Python</option>
                  <option values="swift">Swift</option>
                  <option value="obj-c">Objective C</option>
                  <option values="c++">C++</option>
                  <option value="java">Java</option>
                  <option values="">Gedabrusss</option>
                </select>
              </div>
            </div><!-- /.box-body -->

            <div class="box-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div><!-- /.box -->
      </div><!--/.col (left) -->
      <% if (callout) { %>
      <% 
        let calloutMessage = '', alertType = '', alertIcon = '';
        switch (callout.status) {
          case 'succeeded' : {
            calloutMessage = `You're successfully adding new teacher : <b>${callout.adding}</b>`;
            alertType = 'success';
            alertIcon = 'fa-check';
          }; break;

          case 'error' : {
            calloutMessage = `You are required to fill all the information that wee need. Please check your input again, and try again.`;
            alertType = 'danger';
            alertIcon = 'fa-ban'
          }; break;             
        }
      %>
      <!--.col (right) -->
      <div class="col-md-6">
        <div class="alert alert-<%=alertType%> alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h4>	<i class="icon fa <%= alertIcon %>"></i><%= callout.status.toUpperCase() %> !</h4>
          <%= calloutMessage %>
        </div>
      </div>
      <!--/.col (right) -->
      <% } %>
    </div>   <!-- /.row -->
  </section><!-- /.content -->