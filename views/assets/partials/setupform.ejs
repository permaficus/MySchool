<section class="content">
    <div class="row">
      <!-- left column -->
      <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
          <div class="box-header">
            <h3 class="box-title">This is the default value</h3>
          </div><!-- /.box-header -->
          <!-- form start -->
          <form role="form" action="/setup/begin?start=auto" method="POST">
            <div class="box-body">
              <div class="form-group">
                <label for="exampleInputEmail1">Web Server Port</label>
                <input type="text" class="form-control" name="port" id="port" placeholder="Enter name" value="3000">
              </div>
              <div class="form-group">
                <label>Database Type</label>
                <select name="database" class="form-control">
                  <option value="postgres">PostgreSQL</option>
                  <option values="json" disabled>JSON</option>
                  <option values="mysql" disabled>MySQL</option>
                  <option values="mariadb" disabled>MariaDB</option>
                </select>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Hostname</label>
                <input type="text" class="form-control" name="pg_server" id="pg_server" placeholder="Enter hostname" value="localhost">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">DB User Name</label>
                <input type="text" class="form-control" name="pg_user" id="pg_user" placeholder="Enter user" value="postgres">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">DB User Password</label>
                <input type="password" class="form-control" name="pg_password" id="pg_password" placeholder="" value="postgres">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Database Name (Make sure that you're already create the Database)</label>
                <input type="text" class="form-control" name="pg_db_name" id="pg_db_name" placeholder="Enter DB name" value="school">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Database Port</label>
                <input type="text" class="form-control" name="pg_port" id="pg_port" placeholder="Enter Port" value="5432">
              </div>
            </div><!-- /.box-body -->

            <div class="box-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div><!-- /.box -->
      </div><!--/.col (left) -->
    </div>   <!-- /.row -->
  </section><!-- /.content -->