<section class="content">
    <div class="row">
      <div class="col-xs-12">
        <% if (callout) { %>
        <div class="callout callout-success">
          <h4><%= callout.status.toUpperCase() %></h4>
          <%  
            let calloutMessage = '';
            switch (Object.keys(callout)[0]) {
              case 'updating' : calloutMessage = `You're successfully updating ${callout.updating}`; break;
              case 'deleting' : calloutMessage = `You're successfully removing ${callout.deleting} from the list`;
            }
          %>
          <p><%= calloutMessage %></p>
        </div>
        <% } %>
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Class Room List</h3>
          </div><!-- /.box-header -->
          <div class="box-body">
            <table id="example2" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Class Name</th>
                  <th>Class Date</th>
                  <th>Time</th>
                  <th>Room</th>
                  <th>Instructor</th>
                  <th style="text-align: center;">Action</th>
                </tr>
              </thead>
              <tbody>
                <% if (data) {data.forEach(el => {%>
                <% const cdate = new Date(el.class_date) %>
                <% let month = cdate.getMonth() < 10 ? `0${cdate.getMonth()+1}` : cdate.getMonth() %>
                <tr>
                  <td><%= el.class_id %></td>
                  <td><%= el.subjects_name %></td>
                  <td><%= `${cdate.getDate()}/${month}/${cdate.getFullYear()}` %></td>
                  <td><%= el.class_time %></td>
                  <td><%= el.room %></td>
                  <td><%= el.teacher_name %></td>
                  <td style="text-align: center;">
                    <a href="/class/edit?id=<%= el.class_id %>" class="glyphicon glyphicon-edit"></a>
                    <a href="/class/delete?id=<%= el.class_id %>" class="glyphicon glyphicon-remove"></a>
                  </td>
                </tr>
                <% })} %>
              </tbody>
            </table>
          </div><!-- /.box-body -->
        </div><!-- /.box -->
      </div><!-- /.col -->
    </div><!-- /.row -->
  </section><!-- /.content -->