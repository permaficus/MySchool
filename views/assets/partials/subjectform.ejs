<section class="content">
    <div class="row">
      <!-- left column -->
      <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
          <div class="box-header">
            <h3 class="box-title">Subject name cannot be empty</h3>
          </div><!-- /.box-header -->
          <!-- form start -->
          <form role="form" action="/subjects/add" method="POST">
            <div class="box-body">
              <div class="form-group">
                <label for="exampleInputEmail1">Subject Name</label>
                <input type="text" class="form-control" name="subjects_name" id="name" placeholder="Enter subject name">
              </div>
            </div><!-- /.box-body -->

            <div class="box-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div><!-- /.box -->
      </div><!--/.col (left) -->
      <% if (callout) { %>
      <% 
        let calloutMessage = '', alertType = '', alertIcon = '';
        switch (callout.status) {
          case 'succeeded' : {
            calloutMessage = `You're successfully adding subjects : <b>${callout.adding}</b>`;
            alertType = 'success';
            alertIcon = 'fa-check';
          }; break;

          case 'error' : {
            calloutMessage = `You are required to fill all the information that wee need. Please check your input again, and try again.`;
            alertType = 'danger';
            alertIcon = 'fa-ban'
          }; break;             
        }
      %>
      <!--.col (right) -->
      <div class="col-md-6">
        <div class="alert alert-<%=alertType%> alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h4>	<i class="icon fa <%= alertIcon %>"></i><%= callout.status.toUpperCase() %> !</h4>
          <%= calloutMessage %>
        </div>
      </div>
      <!--/.col (right) -->
      <% } %>
    </div>   <!-- /.row -->
  </section><!-- /.content -->